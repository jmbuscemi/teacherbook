<h2> You are logged in as <%= @teacher.name %> </h2>
<%= link_to 'Edit Profile', edit_teacher_path(session[:teacher_id]) %>

<h3>Listing Parents</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Student</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teacher.parents.each do |parent| %>
      <tr>
        <td><%= parent.name %></td>
        <td><%= parent.student %></td>
        <td><%= parent.email %></td>
        <td><%= link_to 'Edit', edit_parent_path(parent) %></td>
        <td><%= link_to 'Delete', parent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Parent', new_parent_path %>
